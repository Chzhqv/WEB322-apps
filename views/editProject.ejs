<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project</title>
    <link href="/css/main.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <%- include('partials/navbar', { page: '' }) %>
    <div class="container mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold text-center text-gray-400 mb-8">Edit Project: <%= project.title %></h1>
        <form method="POST" action="/solutions/editProject" class="max-w-2xl mx-auto bg-gray-800 p-8 rounded-lg shadow-md">
            <input type="hidden" name="id" value="<%= project.id %>" />
            <div class="form-control mb-4">
                <label for="title" class="label">
                    <span class="label-text font-bold text-gray-300">Project Title</span>
                </label>
                <input type="text" id="title" name="title" value="<%= project.title %>" placeholder="Enter project title" required
                       class="input input-bordered w-full" />
            </div>
            <div class="form-control mb-4">
                <label for="feature_img_url" class="label">
                    <span class="label-text font-bold text-gray-300">Feature Image URL</span>
                </label>
                <input type="url" id="feature_img_url" name="feature_img_url" value="<%= project.feature_img_url %>" placeholder="Enter image URL" required
                       class="input input-bordered w-full" />
            </div>
            <div class="form-control mb-4">
                <label for="sector_id" class="label">
                    <span class="label-text font-bold text-gray-300">Sector</span>
                </label>
                <select id="sector_id" name="sector_id" required class="select select-bordered w-full">
                    <option value="" disabled>Select a sector</option>
                    <% sectors.forEach(sector => { %>
                        <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? 'selected' : '' %>><%= sector.sector_name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-control mb-4">
                <label for="intro_short" class="label">
                    <span class="label-text font-bold text-gray-300">Short Introduction</span>
                </label>
                <textarea id="intro_short" name="intro_short" placeholder="Enter a short introduction" required
                          class="textarea textarea-bordered w-full h-24"><%= project.intro_short %></textarea>
            </div>
            <div class="form-control mb-4">
                <label for="summary_short" class="label">
                    <span class="label-text font-bold text-gray-300">Short Summary</span>
                </label>
                <textarea id="summary_short" name="summary_short" placeholder="Enter a short summary" required
                          class="textarea textarea-bordered w-full h-24"><%= project.summary_short %></textarea>
            </div>
            <div class="form-control mb-4">
                <label for="impact" class="label">
                    <span class="label-text font-bold text-gray-300">Impact</span>
                </label>
                <textarea id="impact" name="impact" placeholder="Describe the project's impact" required
                          class="textarea textarea-bordered w-full h-32"><%= project.impact %></textarea>
            </div>
            <div class="form-control mb-6">
                <label for="original_source_url" class="label">
                    <span class="label-text font-bold text-gray-300">Original Source URL</span>
                </label>
                <input type="url" id="original_source_url" name="original_source_url" value="<%= project.original_source_url %>" placeholder="Enter source URL" required
                       class="input input-bordered w-full" />
            </div>
            <div class="form-control flex flex-row gap-4">
                <button type="submit" class="btn btn-primary w-1/2">Update Project</button>
                <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error w-1/2">Delete Project</a>
            </div>
        </form>
    </div>
</body>
</html>